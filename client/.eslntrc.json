{
    "parser": "@typescript-eslint/parser",
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "eslint:recommended",
        "prettier",
        "prettier/@typescript-eslint"
    ],
    "env": {
        "es6": true,
        "node": true
    },
    "rules": {
        "no-debugger": "off",
        "prettier/prettier": "error",
        "max-len": [
            "error",
            {
                "code": 80
            }
        ],
        "indent": [
            "error",
            2
        ]
    },
    "plugins": [
        "prettier"
    ]
}
